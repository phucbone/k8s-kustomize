##### Environments #####
# Vector Agent #

VECTOR_AGGREGATOR_NAMESPACE=monitoring
VECTOR_AGGREGATOR_ADDRESS=http://vector-aggregator.${VECTOR_AGGREGATOR_NAMESPACE}.svc.cluster.local:6000

VECTOR_COLOR=auto

VECTOR_CONFIG_DIR=/etc/vector
VECTOR_CONFIG=${VECTOR_CONFIG_DIR}/vector-agent.yaml

VECTOR_DATA_DIR=/var/lib/vector/

VECTOR_LOG=WARN
VECTOR_LOG_FORMAT=text

VECTOR_WATCH_CONFIG=true
VECTOR_WATCH_CONFIG_METHOD=recommended
